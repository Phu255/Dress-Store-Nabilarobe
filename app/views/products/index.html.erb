<%= render "layouts/header" %>
<body class="productindex">
  <p style="color: green"><%= notice %></p>
  <p style="color: green"><%= alert %></p>
  <div class="normal">
  <h1><%= link_to "All Nabi Dresses", products_path, class:"nav-link" %></h1>
  <div class="filter">
  <%= render "filter" %>
  </div>
  <div class="allproduct">
    <% @products.each do |product| %>
    
      <% render product %>  <!-- #add = for connect to _product.hmtl.erb ,not reccommend-->

      <div class="eachproduct">
        <% if admin_signed_in? %>      
          <div>
            <%= link_to "Edit", edit_product_path(product) ,class:'edit'%> 
          </div>
        <%end%>

        <div>
          <%= link_to image_tag(product.avatar,class:'image'),product %>
        </div>

        <div class="price">
          <%= number_to_currency (product.price1/25000)-0.01  %>
          <%if product.price2.present? %>~
            <%= number_to_currency (product.price2/25000)-0.01  %>
          <%end%>
        </div>

        <div class="name">
          <%= product.name %>
        </div>

        <div class="size">
          <%= product.size1 %>
          <%if product.size2.present? %>-
          <%= product.size2 %>
          <%end%>
        </div>
        
        <div class="color">
          <%= product.color1 %>
          <%if product.color2.present? %>/
            <%= product.color2 %>
          <%end%>
        </div>

      </div>
    <% end %>
  </div>
  </div>
</body>
<%= render "layouts/footer" %>